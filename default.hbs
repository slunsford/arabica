    {{! Styles and Fonts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/normalize.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/icons.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,700,100italic,300italic,700italic|Source+Code+Pro:300,400,500,700|Bree+Serif' rel='stylesheet' type='text/css'>
    
    {{! Bigfoot - popover footnotes }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script type="text/javascript" src="{{asset "bigfoot/dist/bigfoot.js"}}"></script>
    <link rel="stylesheet" type="text/css" href="{{asset "bigfoot/dist/bigfoot-number.css"}}" />
    <script type="text/javascript">
    	$.bigfoot();
    </script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">
	<header class="main-header">
		<div class="main-header-content">
			<h1 class="blog-title"><a href="/">{{@blog.title}}</a></h1>
			<h2 class="blog-description">{{@blog.description}}</h2>
		</div>
		
		{{navigation}}
		
	</header>

    {{! Everything else gets inserted here }}
    {{{body}}}
    
    <footer class="site-footer">
    	{{! Change "Sean Lunsford" to name or @blog.title; change Twitter link }}
    	<section class="rss"><a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/"></a></section>
    	<section class="twitter"><a class="icon-twitter" href="https://twitter.com/splunsford"> @SPLunsford</a> | <a href="https://twitter.com/_thedarkroast">@_thedarkroast</a></section>
    	<section class="copyright">&copy; {{date format="YYYY"}} Sean Lunsford</section>
        <section class="poweredby"><a href="http://thedarkroast.com/arabica/">Arabica</a> theme by yours truly. Published with <a href="https://ghost.org">Ghost</a>.</section>
    </footer>
    {{ghost_foot}}
</body>
</html>